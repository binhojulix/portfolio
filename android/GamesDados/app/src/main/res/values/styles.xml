<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="labels" parent="size">
        <item name="android:background">#ccc</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="btn_danger" parent="size">
        <item name="android:background">#d9534f</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="btn_info" parent="size">
        <item name="android:background">#46b8da</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="btn_warning" parent="size">
        <item name="android:background">#f0ad4e</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
